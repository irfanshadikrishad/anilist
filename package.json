{
  "name": "@irfanshadikrishad/anilist",
  "description": "Minimalist unofficial AniList CLI for Anime and Manga Enthusiasts",
  "version": "1.8.3",
  "author": "Irfan Shadik Rishad",
  "license": "MPL-2.0",
  "scripts": {
    "all": "npm run build && npm run lint && npm run lint:fix && npm run format && npm test",
    "build": "rm -rf ./bin && tsc",
    "build:watch": "rm -rf ./bin && tsc -w",
    "format": "prettier . --write",
    "format:check": "prettier . --check",
    "lint": "eslint ./dist",
    "lint:fix": "eslint ./dist --fix",
    "test": "jest ./tests"
  },
  "keywords": [
    "anilist",
    "CLI",
    "anime",
    "manga",
    "anime list",
    "manga list",
    "anime tracker",
    "manga tracker",
    "anilist API",
    "anime progress",
    "manga progress",
    "media list",
    "export anime",
    "import anime",
    "export manga",
    "import manga",
    "status tracker",
    "watchlist",
    "reading list",
    "graphql"
  ],
  "homepage": "https://github.com/irfanshadikrishad/anilist",
  "bugs": {
    "url": "https://github.com/irfanshadikrishad/anilist/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/irfanshadikrishad/anilist"
  },
  "type": "module",
  "main": "./bin/index.js",
  "types": "./bin/index.d.ts",
  "bin": {
    "anilist": "./bin/index.js"
  },
  "prettier": "@irfanshadikrishad/prettier",
  "dependencies": {
    "@irfanshadikrishad/cipher": "^1.3.2",
    "chalk": "^5.6.2",
    "cli-truncate": "^5.1.0",
    "commander": "^14.0.1",
    "fast-xml-parser": "^5.2.5",
    "inquirer": "^12.9.6",
    "jsonrepair": "^3.13.1",
    "node-fetch": "^3.3.2",
    "open": "^10.2.0",
    "papaparse": "^5.5.3",
    "tiny-spinner": "^2.0.5",
    "xml2js": "^0.6.2"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.28.3",
    "@eslint/js": "^9.36.0",
    "@irfanshadikrishad/prettier": "^1.2.3",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.5.2",
    "@types/papaparse": "^5.3.16",
    "@types/xml2js": "^0.4.14",
    "@typescript-eslint/eslint-plugin": "^8.44.0",
    "@typescript-eslint/parser": "^8.44.0",
    "eslint": "^9.36.0",
    "globals": "^16.4.0",
    "jest": "^30.1.3",
    "prettier": "^3.6.2",
    "prettier-plugin-organize-imports": "^4.3.0",
    "ts-jest": "^29.4.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  },
  "publishConfig": {
    "access": "public"
  }
}
